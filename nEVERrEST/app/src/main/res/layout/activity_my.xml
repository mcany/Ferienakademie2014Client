<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <TextView
        android:id="@+id/coordinates"
        android:text="Latitude: %s, Longitude: %s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: %s"/>

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude: %s"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: %s"/>

    <ToggleButton
        android:id="@+id/btnStartGPSTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Start GPS Tracking"
        android:textOn="Stop GPS Tracking"/>


</LinearLayout>
